name: ðŸš€ CI/CD - Docker Build & Push

on:
  push:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repo
        uses: actions/checkout@v3

      - name: Docker Login
        run: echo "${{ secrets.DOCKER_PASSWORD }}" | docker login -u "${{ secrets.DOCKER_USERNAME }}" --password-stdin

      - name: Docker Build
        run: docker build -t ${{ secrets.DOCKER_USERNAME }}/team-portfolio-app:latest .

      - name: Docker Push
        run: docker push ${{ secrets.DOCKER_USERNAME }}/team-portfolio-app:latest
